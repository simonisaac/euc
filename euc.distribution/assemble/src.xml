	<id>distribution</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../euc.mule/src/main/resources</directory>
			<outputDirectory>${muleDistributionDir}</outputDirectory>
			<includes>
				<include>**/*</include>
