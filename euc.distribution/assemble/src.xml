				<include>org.sri.nodeservice:nodeservice.mule</include>
				
				<include>com.msilm.euc:euc.service</include>
				<include>com.msilm.euc:euc.nodeservice</include>
				<include>com.msilm.euc:euc.mule</include>
				
				<include>net.sf.jxls:jxls-core</include>
				<include>org.apache.poi:poi</include>
				<include>net.sf.flexjson:flexjson</include>
				<include>commons-dbcp:commons-dbcp</include>
				<include>jdbc:sqljdbc4</include>
			</includes>
		</dependencySet>
	</dependencySets>
