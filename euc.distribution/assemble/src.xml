			<includes>
				<include>org.sri.nodeservice:nodeservice.core</include>
				<include>org.sri.nodeservice:nodeservice.core.nodemgr</include>
				<include>org.sri.nodeservice:nodeservice.transform.excel</include>
				<include>org.sri.nodeservice:nodeservice.transform.extjs</include>
				<include>org.sri.nodeservice:nodeservice.transform.json</include>
